# Environment variables for UrbanBus Next.js
# Copy to .env.local and fill values; NEVER commit .env.local to VCS.

# Database (Prisma)
DATABASE_URL="file:./prisma/dev.db"

# Razorpay credentials
# Public key ID is safe to expose on client via NEXT_PUBLIC_
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
# Secret must remain on server only
RAZORPAY_KEY_SECRET="{{RAZORPAY_KEY_SECRET}}"
# Webhook secret for verifying Razorpay webhooks
RAZORPAY_WEBHOOK_SECRET="{{RAZORPAY_WEBHOOK_SECRET}}"
